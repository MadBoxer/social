%h1 Список <%= plural_table_name %>

%table{:class => :admin_list_table}
  %tr
<% for attribute in attributes -%>
    %th <%= attribute.human_name %>
<% end -%>
    %th
    %th

  - @objects.each do |<%= singular_table_name %>|
    %tr
<% for attribute in attributes -%>
      %td= <%= singular_table_name %>.<%= attribute.name %>
<% end -%>
      %td= link_to <%= singular_table_name %>.name, edit_<%= singular_table_name %>_path(<%= singular_table_name %>)
      %td= link_to 'Удалить', <%= singular_table_name %>_path(<%= singular_table_name %>), <%= key_value :method, ":delete" %>, <%= key_value :data, "{ #{key_value :confirm, "'Вы уверены?'"} }" %>

%br

= link_to 'Создать <%= human_name %>', new_<%= singular_table_name %>_path