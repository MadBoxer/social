= form_for [:administration, @object] do |f|
  = render :partial => 'shared/errors', :locals => {:object => @object}
  %table{:class => :scaffold_table}
    %tr
      %td= f.label :name, 'Название'
      %td= f.text_field :name
    %tr
      %td= f.label :alias, 'Псевдоним'
      %td= f.text_field :alias
    %tr
      %td= f.label :country_id, 'Страна'
      %td= f.select :country_id, Setting.countries.all.collect{|c| [c.value, c.id]}
    %tr
      %td= f.label :city_image, 'Герб'
      %td= f.file_field :city_image
    %tr
      %td
      %td= f.submit 'Сохранить'